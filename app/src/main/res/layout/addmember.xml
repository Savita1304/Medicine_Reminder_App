                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/card1"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="@color/offWhite"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/addimg1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/kkk"
                            app:tint="@color/brown" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/nameError"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            app:errorEnabled="true"
                            android:theme="@style/EditTheme"

                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:maxLength="30"
                                android:hint="Name"

                                android:inputType="textEmailAddress"
                                android:paddingLeft="8dp"
                                android:textColor="@color/gray"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:id="@+id/card2"
                    app:cardBackgroundColor="@color/offWhite"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/addimg2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/lll"
                            app:tint="@color/brown"
                            />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ageError"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/EditTheme"

                            app:errorEnabled="true"
                           >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/age"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Age"
                                android:maxLines="1"
                                android:maxLength="3"
                                android:inputType="number"
                                android:paddingLeft="8dp"
                                android:textColor="@color/gray"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card3"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="12dp"
                        app:cardBackgroundColor="@color/offWhite"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <ImageView
                                android:id="@+id/addimg3"
                                app:tint="@color/brown"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/height" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3333"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.25"
                                    android:gravity="center">


                                    <Spinner

                                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                                        android:id="@+id/adds1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="4dp" />

                                </LinearLayout>

                                <LinearLayout

                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.25">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center|left"
                                        android:text="feet"
                                        android:textColor="@color/gray"
                                        android:theme="@style/EditTheme"

                                        android:textSize="16sp"
                                        android:textStyle="normal" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.25"
                                    android:gravity="center">

                                    <Spinner
                                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                                        android:id="@+id/adds2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_gravity="center"
                                        android:dropDownWidth="50dp"
                                        android:padding="4dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.25">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center|left"
                                        android:text="inch"
                                        android:textColor="@color/gray"
                                        android:textSize="16sp"
                                        android:textStyle="normal" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:id="@+id/cad3"
                    app:cardBackgroundColor="@color/offWhite"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/adimg3"

                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/mm"
                            app:tint="@color/brown"
                            />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/heightError"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:theme="@style/EditTheme"

                            app:errorEnabled="true"
                          >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/height"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:maxLength="2"
                                android:hint="height"
                                android:inputType="numberDecimal"
                                android:digits=" 123456789. "
                                android:paddingLeft="8dp"
                                android:textColor="@color/gray"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:id="@+id/card4"
                    app:cardBackgroundColor="@color/offWhite"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/addimg4"

                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/nn"
                            app:tint="@color/brown"
                            />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/WeightError"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:theme="@style/EditTheme"

                            app:errorEnabled="true"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/weight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:maxLength="3"
                                android:hint="Weight"
                                android:inputType="number"
                                android:paddingLeft="8dp"
                                android:textColor="@color/gray"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:id="@+id/card5"
                    app:cardBackgroundColor="@color/offWhite"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"

                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/addimg5"

                            android:layout_width="32dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/oo"
                            app:tint="@color/brown"
                            />


                        <RadioGroup
                            android:id="@+id/rdgrp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/Male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:checked="true"
                                android:padding="4dp"
                                android:text="Male"
                                android:buttonTint="@color/gray"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/Female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:buttonTint="@color/gray"

                                android:padding="4dp"
                                android:text="Female"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn1"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/custom_button"/>


            </LinearLayout>
        </ScrollView>

    <LinearLayout
        android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="10dp"
        android:visibility="gone"
        app:behavior_hideable="true"
        android:weightSum="1"
        android:background="#dee5ec"
        android:orientation="horizontal"
        app:behavior_peekHeight="60dp"
        app:layout_behavior="@string/bottom_sheet_behavior">


    </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>